<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/t7"
    tools:context=".MainActivity">


    <ImageView
        android:src="@drawable/park"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        />


    <EditText
        android:id="@+id/vec_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textColor="@color/googlecolor"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:hint="Registeration Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/vec_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:ems="10"
        android:textColor="@color/googlecolor"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="210dp"
        android:textColorHint="@color/white"
        android:hint="Vechicle Number"
        android:inputType="number" />


    <EditText
        android:id="@+id/vec_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="260dp"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:hint="Vechicle type"/>

    <EditText
        android:id="@+id/vec_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="320dp"
        android:inputType="text"
        android:hint="Vechicle color"
         />

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="insertData"
        android:background="@drawable/buttonstyle"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:text="Save" />
    <Button
        android:id="@+id/btnshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="300dp"
        android:text="Show Database"
        />



</RelativeLayout>